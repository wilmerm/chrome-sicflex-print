{
    "manifest_version": 3,
    "name": "Sicflex Print",
    "version": "3.5",
    "description": "Extensi√≥n para imprimir facturas en Sicflex desde el navegador.",
    "author": "Wilmer Martinez",
    "permissions": [
      "activeTab",
      "declarativeContent",
      "storage"
    ],
    "host_permissions": [
      "https://*.sicflex.com/*"
    ],
    "content_scripts": [
      {
        "matches": ["https://*.sicflex.com/*"],
        "css": ["background.css"],
        "js": ["content.js"]
      }
    ],
    "web_accessible_resources": [
        {
          "resources": [
            "background.css",
            "print.html",
            "print.css",
            "images/*"
          ],
          "matches": ["https://*.sicflex.com/*"]
        }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "options_ui": {
      "page": "options.html",
      "open_in_tab": true
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/print16.png",
        "32": "images/print32.png",
        "48": "images/print48.png",
        "128": "images/print128.png"
      }
    },
    "icons": {
      "16": "images/print16.png",
      "32": "images/print32.png",
      "48": "images/print48.png",
      "128": "images/print128.png"
    }
  }
