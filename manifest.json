{
    "name": "Imprimir Factura",
    "version": "0.0.0.4",
    "description": "Extención para imprimir facturas en Sicflex desde el navegador.",
    "author": "UNOLET (Wilmer Martínez)",

    "permissions": ["declarativeContent", "storage", "https://refricentrorubiera.sicflex.com/*"],

    "content_scripts": [
        {
          "matches": ["https://refricentrorubiera.sicflex.com/*"], 
          "css": ["background.css"],
          "js": ["print.js"]
      }
    ],

    "web_accessible_resources": [
        "background.css",
        "print.html",
        "print.css",
        "images/empresa.png",
        "images/documento.svg"
    ],

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },

    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/print16.png",
            "32": "images/print32.png",
            "48": "images/print48.png",
            "128": "images/print128.png"
          }
    },

    "icons": {
        "16": "images/print16.png",
        "32": "images/print32.png",
        "48": "images/print48.png",
        "128": "images/print128.png"
    },


    "manifest_version": 2
}